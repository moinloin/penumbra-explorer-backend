# Logging configuration
RUST_LOG=info

# Database connection strings (required)
SOURCE_DB_URL=postgresql://username:password@hostname:port/database?sslmode=require
DEST_DB_URL=postgresql://username:password@hostname:port/database?sslmode=disable

# Application configuration
GENESIS_JSON=genesis.json

# Optional block range configuration
FROM_HEIGHT=1000  # Optional: Start from this block height
TO_HEIGHT=2000    # Optional: Process until this block height
BATCH_SIZE=100    # Default: 100
POLLING_INTERVAL_MS=1000  # Default: 1000

# API configuration
PORT=3000  # Default: 3000
API_HOST=0.0.0.0  # Default: 0.0.0.0
